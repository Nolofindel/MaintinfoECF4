@model IEnumerable<MaintinfoBo.BonEntree>

@{
    ViewBag.Title = "Liste";
}

<h2>Les Bons d'entrée</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArticleEntree.NomArticle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantiteEntree)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateEntree)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ArticleEntree.NomArticle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuantiteEntree)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateEntree)
