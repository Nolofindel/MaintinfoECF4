@model IEnumerable<MaintinfoBo.BonSortie>

@{
	ViewBag.Title = "Accueil bon de sortie";
}

<h2>Affichage des bons de sortie</h2>

<p>
	@Html.ActionLink("Nouvelle sortie", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.ArticleSortie.NomArticle)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Quantite)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.LeDepanneur.NomDepanneur)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DateDemande)
		</th>
		<th></th>
	</tr>

@foreach (var item in Model) {
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.ArticleSortie.NomArticle)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Quantite)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.LeDepanneur.NomDepanneur)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.DateDemande)
		</td>
		<td>           
			@Html.ActionLink("Details", "Details", new { id=item.BonSortieID })
		</td>
	</tr>
}

</table>
